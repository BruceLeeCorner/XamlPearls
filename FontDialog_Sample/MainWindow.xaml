<Window
    x:Class="FontDialog_Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FontDialog_Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox
            x:Name="TextBlockSample"
            Margin="10"
            FontSize="16"
            Text="Click the button to show the FontDialog." />
        
        <Button Click="Button_Click" Content="Show FontDialog" Margin="10" />
    </StackPanel>
</Window>
